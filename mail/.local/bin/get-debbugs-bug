#!/bin/zsh

MBOX="$HOME/.cache/debbugs.mbox"
URL="https://debbugs.gnu.org/cgi/bugreport.cgi?bug=%s&mbox=yes"

BUGNO=$(sed -En 's/^Subject: .*(B|b)ug *#([0-9]*).*$/\2/ p ; /^$/ q')

if [[ -z "$BUGNO" ]]; then
    echo "No bug number found!"
    echo $BUGNO
    rm -f $MBOX
    exit
fi

wget $(printf "$URL" $BUGNO) -O $MBOX
