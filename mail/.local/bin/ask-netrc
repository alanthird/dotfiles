#!/bin/zsh

SEARCH="$1"
SERVER="$2"

if [ -z "$SERVER" ]; then
    SERVER="default"
    exit
fi

if [ -z "$SEARCH" ]; then
    SEARCH="password"
    exit
fi

case ${OSTYPE} in
    darwin*)
        SEDFLAGS='-En'
        ;;
    *)
        SEDFLAGS='-rn'
        ;;
esac

sed ${SEDFLAGS} '
    /^machine[[:space:]]+'${SERVER}'/,$ {
      /'${SEARCH}'[[:space:]][^"]/ {
        s/^.*'${SEARCH}'[[:space:]]+([^[:space:]]+).*$/\1/
        p
        q
      }
      /'${SEARCH}'[[:space:]]"/ {
        s/^.*'${SEARCH}'[[:space:]]+"(([^"\\]|\\.)*)".*$/\1/
        s/\\(.)/\1/g
        p
        q
      }
    }
  ' ${HOME}/.netrc
