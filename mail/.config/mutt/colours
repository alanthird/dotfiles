# Colors for items in the index
color index color6 default ~N
color index color14 default ~O
color index color2 default ~F
color index color0 color13 ~T
color index color1 default ~D
mono index bold ~N
mono index bold ~F
mono index bold ~T
mono index bold ~D

# Highlights inside the body of a message.

# URLs
color body color11 default "(http|ftp|news|telnet|finger)://[^ \"\t\r\n]*"
color body color11 default "mailto:[-a-z_0-9.]+@[-a-z_0-9.]+"
mono body bold "(http|ftp|news|telnet|finger)://[^ \"\t\r\n]*"
mono body bold "mailto:[-a-z_0-9.]+@[-a-z_0-9.]+"

# email addresses
color body color11 default "[-a-z_0-9.%$]+@[-a-z_0-9.]+\\.[-a-z][-a-z]+"
#mono body bold "[-a-z_0-9.%$]+@[-a-z_0-9.]+\\.[-a-z][-a-z]+"

# header
color header color2 default "^from:"
color header color2 default "^to:"
color header color2 default "^cc:"
color header color2 default "^date:"
color header color3 default "^newsgroups:"
color header color3 default "^reply-to:"
color header color14 default "^subject:"
color header color1 default "^x-spam-rule:"
color header color2 default "^x-mailer:"
color header color3 default "^message-id:"
color header color3 default "^Organization:"
color header color3 default "^Organisation:"
color header color3 default "^User-Agent:"
color header color3 default "^message-id: .*pine"
color header color3 default "^X-Fnord:"
color header color3 default "^X-WebTV-Stationery:"
color header color3 default "^X-Message-Flag:"
color header color3 default "^X-Spam-Status:"
color header color3 default "^X-SpamProbe:"
color header default color1 "^X-SpamProbe: SPAM"


